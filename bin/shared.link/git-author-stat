#!/usr/bin/env bash

author="${1:-$(git config --get user.name)}"
git log --format= --shortstat --author="$author" | awk '
{
  commits+=1
  files+=$1
  inserted+=$4
  deleted+=$6

  modified+=$4 < $6 ? $4 : $6
  netins+=$4-$6 < 0 ? 0 : $4-$6
  netdel+=$6-$4 < 0 ? 0 : $6-$4
} END {
  print files, "files changed,", inserted, "insertions(+),", deleted, "deletions(-)"
  print commits, "total commits,", netins, "net inserted(+),", netdel, "net deleted(-),", modified, "modified(Â±)"
}
'
