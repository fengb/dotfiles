#!/bin/bash

eexec() {
  command -v "$1" >/dev/null && exec "$@"
}

search() {
  eexec rg -l "$@"
  eexec ag -l "$@"
  eexec ack -l "$@"
  eexec egrep -Rl "$@" .
  eexec grep -Rl "$@" .
}

panic() {
  echo "$1" >&2
  exit 1
}

[[ $1 == s/*/*/* ]] || panic "rr: Search must be in the form s/[search]/[replace]/[args]"
term=${1#s/}
term=${term%/*/*}

search "$term" | xargs -P 4 perl -i -pe "$1"
